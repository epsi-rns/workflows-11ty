{% extends "layouts/widget.njk" %}

{% set color = 'pink' %}

{% block widget_header %}
  <strong>Isle of Friends</strong>
  <span class="fas fa-child is-pulled-right"></span>
{% endblock %}

{% block widget_body %}
  {% set links = friends| shuffle | limit(5) %}

  <ul class="widget-list">
    {%- for friend in links -%}
    <li><a href="{{ friend.url }}"
      >{{ friend.title }}</a></li>
    {%- endfor -%}
  </ul>
{% endblock %}

